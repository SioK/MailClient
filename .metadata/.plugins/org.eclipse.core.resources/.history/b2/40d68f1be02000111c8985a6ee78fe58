package de.bht.fpa.mail.s769161.messagetable;




import org.eclipse.jface.viewers.IStructuredContentProvider;
import org.eclipse.jface.viewers.Viewer;

import de.bht.fpa.mail.s769161.fsnavigation.factory.XMLMessageListFactory;
import de.bht.fpa.mail.s769161.interfaces.IMessageList;




public class TableViewContentProvider implements IStructuredContentProvider {

  @Override
  public void dispose() {
    // TODO Auto-generated method stub

  }

  @Override
  public void inputChanged(Viewer viewer, Object oldInput, Object newInput) {
    // TODO Auto-generated method stub

  }

  @Override
  public Object[] getElements(Object inputElement) {
	  if(inputElement instanceof IMessageList) {
		  
		  XMLMessageListFactory factory = new XMLMessageListFactory(selDir);
		  factory.produceMessageList();
		  return factory.getMessages();
	  }
    return null;
  }

}
