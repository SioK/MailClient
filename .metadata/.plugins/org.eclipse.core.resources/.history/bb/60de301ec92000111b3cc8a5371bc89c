package de.bht.fpa.mail.s769161.messagetable;




import org.eclipse.jface.viewers.IStructuredContentProvider;
import org.eclipse.jface.viewers.Viewer;

import de.bht.fpa.mail.s769161.messagetable.factory.MessageFactory;
import de.bht.fpa.mail.s769161.model.fsmodel.DirectoryItem;




public class TableViewContentProvider implements IStructuredContentProvider {

  @Override
  public void dispose() {
    // TODO Auto-generated method stub

  }

  @Override
  public void inputChanged(Viewer viewer, Object oldInput, Object newInput) {
    // TODO Auto-generated method stub

  }

  @Override
  public Object[] getElements(Object inputElement) {
    if (inputElement instanceof DirectoryItem) {
      MessageFactory factory = new MessageFactory((DirectoryItem) inputElement);
      return factory.getMessages().toArray();
    }

    return null;
  }

}
